<ScatterTextWidget>:
	orientation: 'vertical'

	TextInput:
		id: my
		font_size: 10
		size_hint_y: None
		height: 100
		text: 'Shiva'
		color: my1.color
		on_text: root.colorchange()
	FloatLayout:
		Scatter:
			Label:
				id: my1
				text: my.text 
				font_size: 100
				height:100
				font_size:50

